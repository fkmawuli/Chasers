<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="3"
    android:orientation="vertical"
    android:layout_weight="3"
    tools:context="com.example.mawuli.chasers.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <com.github.florent37.arclayout.ArcLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="10dip"
            app:arc_cropDirection="cropOutside"
            app:arc_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chasers2"
                    />

            </LinearLayout>

        </com.github.florent37.arclayout.ArcLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_forgot_password"
            android:textSize="30sp"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:id="@+id/forgot_password" />

        <TextView
            android:id="@+id/forgot_password_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forget_password_message"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/forgot_password"
            android:textColor="@color/colorAccent" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/forgot_password_message"
            android:id="@+id/textInputLayout">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:ems="15"
                android:hint="@string/hint_email"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/email" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_reset_password"
            android:textColor="#ffffff"
            android:background="@drawable/create_account_button"
            android:id="@+id/btn_reset_password"
            android:layout_below="@+id/textInputLayout"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarReset"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:progressDrawable="@drawable/circular_progress_view"
            android:layout_alignTop="@+id/btn_reset_password"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="10dp"
            android:text="@string/btn_back"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal"
            android:layout_below="@+id/btn_reset_password"
            android:id="@+id/back_btn" />


    </RelativeLayout>


</LinearLayout>